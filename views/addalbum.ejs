<%- include ('header') %>

   <div class="container">
      <main class="form-signin w-100 m-auto text-center">
         <div class="py-5 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-disc"
               viewBox="0 0 16 16">
               <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
               <path
                  d="M10 8a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 4a4 4 0 0 0-4 4 .5.5 0 0 1-1 0 5 5 0 0 1 5-5 .5.5 0 0 1 0 1zm4.5 3.5a.5.5 0 0 1 .5.5 5 5 0 0 1-5 5 .5.5 0 0 1 0-1 4 4 0 0 0 4-4 .5.5 0 0 1 .5-.5z" />
            </svg>
            <h2>Add an album</h2>
         </div>
         <div>
            <form class="needs-validation" novalidate="" action="/admin/addalbum" method="POST">

               <div class="col-12">
                  <label for="album_name" class="form-label"></label>
                  <div class="input-group has-validation">
                     <input type="text" class="form-control" id="album_name" placeholder="Album title" name="fieldAlbum"
                        required="">
                     <div class="invalid-feedback">
                        Valid album title is required.
                     </div>
                  </div>
               </div>

               <div class="col-12">
                  <label for="album_year" class="form-label"></label>
                  <div class="input-group has-validation">
                     <input type="text" class="form-control" id="album_year" placeholder="Year" name="fieldYear"
                        required="">
                     <div class="invalid-feedback">
                        Valid album year is required.
                     </div>
                  </div>
               </div>

               <div class="col-12">
                  <label for="artist_name" class="form-label"></label>
                  <div class="input-group has-validation">
                     <input type="text" class="form-control" id="artist_name" placeholder="Artist" name="fieldArtist"
                        required="">
                     <div class="invalid-feedback">
                        Valid artist is required.
                     </div>
                  </div>
               </div>

               <div class="col-12">
                  <label for="genre" class="form-label"></label>
                  <div class="input-group has-validation">
                     <input type="text" class="form-control" id="genre" placeholder="Genre" name="fieldGenre"
                        required="">
                     <div class="invalid-feedback">
                        Valid genre is required.
                     </div>
                  </div>
               </div>

               <div class="col-12">
                  <label for="subgenre" class="form-label"></label>
                  <div class="input-group has-validation">
                     <input type="text" class="form-control" id="genre" placeholder="Sub-genre" name="fieldSubgenre"
                        required="">
                     <div class="invalid-feedback">
                        Valid genre is required.
                     </div>
                  </div>
               </div>

               <div class="col-12">
                  <label for="subgenre2" class="form-label"></label>
                  <div class="input-group has-validation">
                     <input type="text" class="form-control" id="genre" placeholder="Sub-genre" name="fieldSubgenre2"
                        required="">
                     <div class="invalid-feedback">
                        Valid genre is required.
                     </div>
                  </div>
               </div>

               <div class="col-12">
                  <label for="record_company" class="form-label"></label>
                  <div class="input-group has-validation">
                     <input type="text" class="form-control" id="genre" placeholder="Record company"
                        name="fieldRecordCompany" required="">
                     <div class="invalid-feedback">
                        Valid record company is required.
                     </div>
                  </div>
               </div>

               <div class="col-12">
                  <label for="album_art" class="form-label"></label>
                  <div class="input-group has-validation">
                     <input type="text" class="form-control" id="genre" placeholder="Album art URL" name="fieldAlbumArt"
                        required="">
                     <div class="invalid-feedback">
                        Valid URL is required.
                     </div>
                  </div>
               </div>


         </div>

         <hr class="my-4">
         <div>
            <button class="w-100 btn btn-primary btn-lg" type="submit">add album</button>
         </div>


         </form>
   </div>
   </div>
   </main>

   </div>

   <%- include ('footer') %>