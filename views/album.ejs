<%- include ('header') %>

    <main>
        <div class="row mb-3 text-center">
            <div class="col-md-4 themed-grid-col">
                <h4>
                    <%= album.name %>
                </h4>
                <img src="<%= album.img %>" alt="<%= album.name %>">
                <h5>Year: <%= album.year %>
                </h5>
            </div>
            <div class="col-md-8 themed-grid-col">
                <div class="pb-3">
                    <h4>Album details</h4>
                </div>
                <div class="row">
                    <div class="col-md-6 themed-grid-col">
                        <h4>Tracklist</h4>
                        <ul>
                            <% for (let i=0; i < album.songs.length; i++) { %>
                                <li>
                                    <%= album.songs[i].name %> - <%= album.songs[i].length %>
                                </li>
                                <% } %>
                        </ul>
                    </div>
                    <div class="col-md-6 themed-grid-col">
                        <h4>Genre</h4>
                        <ul>
                            <li>
                                <%= album.genre %>
                            </li>
                            <li>
                                <%= album.subgenre %>
                            </li>
                            <li>
                                <%= album.subgenre2 %>
                            </li>
                        </ul>
                        <h4>Record Company</h4>
                        <p>
                            <%= album.recordCompany %>
                        </p>
                        <% if (!hasUserAdded){ %>
                            <form action="/addalbums/favourite" method="POST">
                                <button name="album_id" value="<%= album.id %>" type="submit" class="btn btn-success">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-plus-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z">
                                        </path>
                                        <path
                                            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z">
                                        </path>
                                    </svg>
                                    Add to my collection
                                </button>

                            </form>
                            <%} else {%>

                                <form action="/addalbums/removefavourite" method="POST">
                                    <button name="album_id" value="<%= album.id %>" type="submit"
                                        class="btn btn-success">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                            <path
                                                d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z">
                                            </path>
                                            <path
                                                d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z">
                                            </path>
                                        </svg>
                                        Remove from my collection
                                    </button>

                                </form>

                                <% }; %>

                                <button type="button" class="btn btn-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-hand-thumbs-up" viewBox="0 0 16 16">
                                        <path d="M8.864.046C7.908-.193 7.02.53 6.956 1.466c-.072 1.051-.23 2.016-.428 2.59-.125.36-.479 1.013-1.04 1.639-.557.623-1.282 1.178-2.131 1.41C2.685 7.288 2 7.87 2 8.72v4.001c0 .845.682 1.464 1.448 1.545 1.07.114 1.564.415 2.068.723l.048.03c.272.165.578.348.97.484.397.136.861.217 1.466.217h3.5c.937 0 1.599-.477 1.934-1.064a1.86 1.86 0 0 0 .254-.912c0-.152-.023-.312-.077-.464.201-.263.38-.578.488-.901.11-.33.172-.762.004-1.149.069-.13.12-.269.159-.403.077-.27.113-.568.113-.857 0-.288-.036-.585-.113-.856a2.144 2.144 0 0 0-.138-.362 1.9 1.9 0 0 0 .234-1.734c-.206-.592-.682-1.1-1.2-1.272-.847-.282-1.803-.276-2.516-.211a9.84 9.84 0 0 0-.443.05 9.365 9.365 0 0 0-.062-4.509A1.38 1.38 0 0 0 9.125.111L8.864.046zM11.5 14.721H8c-.51 0-.863-.069-1.14-.164-.281-.097-.506-.228-.776-.393l-.04-.024c-.555-.339-1.198-.731-2.49-.868-.333-.036-.554-.29-.554-.55V8.72c0-.254.226-.543.62-.65 1.095-.3 1.977-.996 2.614-1.708.635-.71 1.064-1.475 1.238-1.978.243-.7.407-1.768.482-2.85.025-.362.36-.594.667-.518l.262.066c.16.04.258.143.288.255a8.34 8.34 0 0 1-.145 4.725.5.5 0 0 0 .595.644l.003-.001.014-.003.058-.014a8.908 8.908 0 0 1 1.036-.157c.663-.06 1.457-.054 2.11.164.175.058.45.3.57.65.107.308.087.67-.266 1.022l-.353.353.353.354c.043.043.105.141.154.315.048.167.075.37.075.581 0 .212-.027.414-.075.582-.05.174-.111.272-.154.315l-.353.353.353.354c.047.047.109.177.005.488a2.224 2.224 0 0 1-.505.805l-.353.353.353.354c.006.005.041.05.041.17a.866.866 0 0 1-.121.416c-.165.288-.503.56-1.066.56z"></path>
                                      </svg> Like <span class="badge badge-light">4</span>
                                  </button>


                    </div>
                </div>
            </div>


        </div>



    </main>



    <%- include ('footer') %>